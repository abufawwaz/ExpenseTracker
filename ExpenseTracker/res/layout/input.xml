<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignMargins"
    android:alpha="1"
    android:background="@drawable/bg3"
    android:columnCount="3"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/textview_width"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="@string/date_input"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/dateInputText"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="date"
            android:textSize="@dimen/textSize" >

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/searchDateInput"
            android:layout_width="@dimen/datepicker_width"
            android:layout_height="@dimen/datepicker_height"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:onClick="dateInputClick"
            android:src="@drawable/icon_date_picker" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/textview_width"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/descriptionText"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:inputType="text"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/textview_width"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/amount"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/amountText"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/textview_width"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:text="@string/expense_type"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/textSize" />

        <Spinner
            android:id="@+id/typeSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:entries="@array/type_input"
            android:prompt="@string/type_prompt"
            android:spinnerMode="dialog"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/categoryView"
            android:layout_width="@dimen/textview_width"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:text="@string/expense_cat"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/textSize" />

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:entries="@array/category_input"
            android:prompt="@string/category_prompt"
            android:spinnerMode="dialog"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row5"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttoncustom"
            android:onClick="onClick"
            android:text="@string/submit"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

</RelativeLayout>