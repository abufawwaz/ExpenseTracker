<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignMargins"
    android:alpha="1"
    android:background="@drawable/bg3"
    android:columnCount="5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/transaksiView"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/trans_hist"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/searchPopUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="Show Search Dialog"
            android:onClick="popUpShow"
            android:src="@drawable/ic_action_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/category_header"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:text="@string/expense_cat"
            android:textColor="#343434"
            android:textSize="@dimen/smallSize" />
        <!-- City -->

        <TextView
            android:id="@+id/description_header"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:text="@string/description"
            android:textColor="#343434"
            android:textSize="@dimen/smallSize" />
        <!-- Weather Information -->

        <TextView
            android:id="@+id/debet_header"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:text="debet"
            android:textColor="#343434"
            android:textSize="@dimen/smallSize" />

        <TextView
            android:id="@+id/credit_header"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:text="kredit"
            android:textColor="#343434"
            android:textSize="@dimen/smallSize" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/expandableListView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:divider="#b5b5b5"
            android:dividerHeight="2dp"
            android:listSelector="@drawable/list_selector"
            android:textSize="@dimen/textSize" >
        </ListView>
    </LinearLayout>

</LinearLayout>