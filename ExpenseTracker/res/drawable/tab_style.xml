<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- state selected -->
    <item android:state_selected="true"><shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#444444" android:endColor="#333333" android:startColor="#555555" />

            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />

            <stroke android:width="2dip" android:color="#555555" />
        </shape></item>
    <!-- state normal -->
    <item><shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#181818" android:endColor="#111111" android:startColor="#222222" />

            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />

            <stroke android:width="2dip" android:color="#222222" />
        </shape></item>

</selector>